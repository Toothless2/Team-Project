<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="DarkTheme" parent="AppTheme">
        <item name="android:background">@color/black</item>
        <item name="android:textColor">@color/lightyellow</item>
        <item name="android:fontFamily">@font/cghotic</item>
    </style>

    <style name="LightTheme" parent="AppTheme">
        <item name="android:background">@color/white</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/cghotic</item>
    </style>

    <style name="Dyslexic" parent="AppTheme">
        <item name="font">@font/opendyslexic</item>
    </style>

    <style name="FontSmall" parent="AppTheme">
        <item name="android:textSize"> 10sp </item>
    </style>
    <style name="FontMedium" parent="AppTheme">
        <item name="android:textSize"> 16sp </item>
    </style>
    <style name="FontBig" parent="AppTheme">
        <item name="android:textSize"> 20sp </item>
    </style>
</resources>
