<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/lightyellow</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="DarkTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:background">#2C2727</item>
        <item name="android:textColor">@color/lightyellow</item>
        <item name="android:fontFamily">@font/cghotic</item>
        <item name="recyclerViewStyle">@style/darkRecyclerView</item>
        <item name="android:windowBackground">#2C2727</item>
        <item name="android:colorBackground">#2C2727</item>
    </style>

    <style name="darkRecyclerView" parent="DarkTheme">
        <item name="android:background">#2C2727</item>
        <item name="android:backgroundTint">#2C2727</item>
    </style>

    <style name="LightTheme" parent="AppTheme">
        <item name="android:background">@color/white</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/cghotic</item>
    </style>

    <style name="Dyslexic" parent="AppTheme">
        <item name="fontFamily">@font/opendyslexic</item>
    </style>

    <style name="FontSmall" parent="AppTheme">
        <item name="android:textSize">10sp</item>
        <item name="android:fontFamily">@font/cghotic</item>

    </style>

    <style name="FontMedium" parent="AppTheme">
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/cghotic</item>
    </style>

    <style name="FontBig" parent="AppTheme">
        <item name="android:textSize">20sp</item>
        <item name="android:labelTextSize">20sp</item>
        <item name="android:keyTextSize">20sp</item>
        <item name="android:fontFamily">@font/cghotic</item>

    </style>

</resources>
